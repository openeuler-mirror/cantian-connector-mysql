DROP PROCEDURE  IF EXISTS insert_data_test1;
DELIMITER //;
CREATE PROCEDURE insert_data_test1()
BEGIN
    DECLARE k INT DEFAULT 1;
    WHILE k <= 10000 DO
        INSERT INTO t1(i,b,c,a) values(k,repeat('a',10000),repeat('a',1000),'a');
        SET k = k + 1;
    END WHILE;
END//
DELIMITER ;//
